    "@lexical/rich-text": "^0.35.0",
    "@lexical/selection": "^0.35.0",
    "@lexical/utils": "^0.35.0",
    "lexical": "^0.35.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "peerDependenciesMeta": {
    "lexical": {
      "optional": true
    },
    "@lexical/react": {
      "optional": true
    },
    "@lexical/html": {
      "optional": true
    },
    "@lexical/link": {
      "optional": true
    },
    "@lexical/list": {
      "optional": true
    },
    "@lexical/rich-text": {
      "optional": true
    },
    "@lexical/selection": {
      "optional": true
    },
    "@lexical/utils": {
      "optional": true
    }
  },
