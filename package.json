{
  "name": "@shondalai/ui-commons",
  "version": "1.0.4",
  "description": "Reusable UI components and utilities for Joomla 5 components",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components/*": {
      "types": "./dist/components/*.d.ts",
      "import": "./dist/components/*.js"
    },
    "./contexts/*": {
      "types": "./dist/contexts/*.d.ts",
      "import": "./dist/contexts/*.js"
    },
    "./hooks/*": {
      "types": "./dist/hooks/*.d.ts",
      "import": "./dist/hooks/*.js"
    },
    "./services/*": {
      "types": "./dist/services/*.d.ts",
      "import": "./dist/services/*.js"
    },
    "./utils/*": {
      "types": "./dist/utils/*.d.ts",
      "import": "./dist/utils/*.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./types/*": {
      "types": "./dist/types/*.d.ts",
      "import": "./dist/types/*.js"
    },
    "./style.css": "./dist/assets/ui-commons.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "prepublishOnly": "npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "joomla",
    "ui",
    "components",
    "react",
    "typescript",
    "layout",
    "dynamic-layout"
  ],
  "author": "Maverick",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shondalai/ui-commons.git"
  },
  "bugs": {
    "url": "https://github.com/shondalai/ui-commons/issues"
  },
  "homepage": "https://github.com/shondalai/ui-commons#readme",
  "peerDependencies": {
    "@lexical/html": "^0.35.0",
